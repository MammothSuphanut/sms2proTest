{
  "compilerOptions": {
    "jsx": "react-jsx",
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": "./src",

    "paths": {
      "@components/*": ["components/*"],
      "@layouts/*": ["layouts/*"],
      "@pages/*": ["pages/*"],
      "@assets/*": ["assets/*"],
      "@store/*": ["store/*"],
      "@theme": ["theme"],
      "@utils/*": ["utils/*"],
      "@images/*": ["images/*"]
    }
  },
  "include": ["src"]
}
